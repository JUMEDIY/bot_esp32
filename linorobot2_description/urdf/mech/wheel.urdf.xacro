<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="wheel" params="side reflect radius width pos_x pos_y pos_z mass">

    <link name="${side}_wheel_tire_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <mesh filename="package://linorobot2_description/urdf/meshes/wheel_tire.stl" scale="1 1 ${reflect}"/>
        </geometry>
        <material name="${side}_tire_material">
          <color rgba="0.1 0.1 0.1 1.0"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${radius}" length="${width}"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="${mass}"/>
        <inertia ixx="${(2/5) * mass * (radius * radius)}" ixy="0" ixz="0"
                 iyy="${(2/5) * mass * (radius * radius)}" iyz="0"
                 izz="${(2/5) * mass * (radius * radius)}" />
      </inertial>
    </link>

    <link name="${side}_wheel_rim_link">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <mesh filename="package://linorobot2_description/urdf/meshes/wheel_rim.stl" scale="1 1 ${reflect}"/>
        </geometry>
        <material name="${side}_rim_material">
          <color rgba="1.0 1.0 0.0 1.0"/>
        </material>
      </visual>
    </link>

    <joint name="${side}_wheel_rim_joint" type="fixed">
      <parent link="${side}_wheel_tire_link"/>
      <child link="${side}_wheel_rim_link"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <joint name="${side}_wheel_joint" type="continuous">
      <axis xyz="0 1 0" />
      <parent link="base_link"/>
      <child link="${side}_wheel_tire_link"/> <origin xyz="${pos_x} ${pos_y} ${pos_z}" rpy="0 0 0"/>
    </joint>

  </xacro:macro>
</robot>
